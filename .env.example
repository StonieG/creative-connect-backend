# Creative Connect Platform - Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# SERVER CONFIGURATION
# ===========================================
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ===========================================
# DATABASE
# ===========================================
MONGODB_URI=mongodb://localhost:27017/creative-connect
# For production, use MongoDB Atlas:
# MONGODB_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/creative-connect

# ===========================================
# AUTHENTICATION
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production-2026
JWT_REFRESH_SECRET=your-refresh-token-secret-change-in-production-2026
JWT_EXPIRES_IN=8h
JWT_REFRESH_EXPIRES_IN=7d

# ===========================================
# STRIPE PAYMENTS
# ===========================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_signing_secret

# ===========================================
# EMAIL (Nodemailer)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=Creative Connect <hello@creativeconnect.io>

# ===========================================
# FILE STORAGE (Optional - for content kit delivery)
# ===========================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=creative-connect-assets

# ===========================================
# AI INTEGRATION (Claude)
# ===========================================
ANTHROPIC_API_KEY=sk-ant-api-your-anthropic-api-key
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# ===========================================
# LAUNCH CONFIGURATION
# ===========================================
LAUNCH_DATE=2026-02-14
PLATFORM_NAME=Creative Connect Platform
